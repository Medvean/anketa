.fill-string
	display flex
	height 60px

	&__label
		font-size 22px
		font-weight 700
		line-height 50px
		color $heading-color

		&_fullname, &_birth
			padding-top 5px

		&_location
			padding-top 8px

		&_skype
			padding-top 11px

		&_email
			padding-top 15px

		&_date
			margin-top 17px

	&__input
		flex 1
		background-repeat no-repeat

		&_fullname
			padding-left 33px
			background-image url(../images/fullname_border.png)
			background-position left 2px bottom -13px

		&_birth
			padding-left 31px
			background-image url(../images/birth_border.png)
			background-position left 16px bottom -14px

		&_location
			padding-top 3px
			padding-left 32px
			background-image url(../images/location_border.png)
			background-position left 12px bottom -15px

		&_skype
			padding-top 8px
			padding-left 29px
			background-image url(../images/skype_border.png)
			background-position left 16px bottom 11px

		&_email
			padding-top 9px
			padding-left 30px
			background-image url(../images/email_border.png)
			background-position left 16px bottom 10px

		&_date
			margin-top 12px
			padding-left 30px
			background-image url(../images/date_border.png)
			background-position left 21px bottom 8px